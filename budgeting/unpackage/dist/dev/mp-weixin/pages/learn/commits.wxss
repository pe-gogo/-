.signup-page .page-header {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 16rpx;
}
.signup-page .page-header .title {
  font-size: 32rpx;
}
.signup-page .page-header .time {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 16rpx;
}
.signup-page .page-main {
  width: 100%;
  margin-top: 16rpx;
}
.signup-page .page-main .main-title {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 24rpx 32rpx;
}
.signup-page .page-main .main-title .line {
  width: 8rpx;
  height: 32rpx;
  background-color: #12a7ff;
  border-radius: 4rpx;
  margin-right: 16rpx;
}
.signup-page .page-main .page-card {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.signup-page .page-main .page-card .page-title:before {
  content: '*';
  color: #C01920;
}
.signup-page .page-main .page-card:nth-last-child(1) {
  margin-top: 16rpx;
}
.signup-page .page-main .page-card .picker-card {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #F5F5F5;
}
.signup-page .page-main .page-card .picker-card .page-right {
  display: flex;
  align-items: center;
}
.signup-page .page-main .page-card .picker-card .page-right input {
  text-align: right;
}
.signup-page .page-main .page-card .picker-card .page-right .icon {
  margin-left: 10rpx;
}
.signup-page .page-main .page-card .input-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  border-bottom: 1px solid #F5F5F5;
}
.signup-page .page-main .page-card .input-card input {
  text-align: right;
}
.signup-page .page-main .page-card .textarea-card {
  padding: 32rpx 0;
}
.signup-page .page-main .page-card .textarea-card textarea {
  margin-top: 16rpx;
  width: 100%;
  height: 152rpx;
  background-color: #EEEEEE;
  padding: 16rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.signup-page .page-bottom {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.signup-page .page-bottom .page-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background-color: #12a7ff;
  font-size: 32rpx;
  border-radius: 48rpx;
}

